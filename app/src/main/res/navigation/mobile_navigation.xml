<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.hhsfbla.hhs_fbla_mad_2021.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/my_profile_action"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_saved_jobs"
        android:name="com.hhsfbla.hhs_fbla_mad_2021.ui.saved.SavedFragment"
        android:label="@string/title_saved_jobs"
        tools:layout="@layout/fragment_saved" />

    <fragment
        android:id="@+id/navigation_jobs"
        android:name="com.hhsfbla.hhs_fbla_mad_2021.ui.jobs.JobsFragment"
        android:label="@string/title_saved_jobs"
        tools:layout="@layout/fragment_jobs" />

    <fragment
        android:id="@+id/navigation_people"
        android:name="com.hhsfbla.hhs_fbla_mad_2021.ui.people.PeopleFragment"
        android:label="@string/title_people"
        tools:layout="@layout/fragment_people" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.hhsfbla.hhs_fbla_mad_2021.ui.profile.MyProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/my_profile_fragment" />
</navigation>