<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/job_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/create_job_offer_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Create Job Offer"
                android:textAlignment="center"
                android:textColor="@color/Green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_job_offer_position_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="@color/DarkGrey"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="6sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_job_offer_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job Position" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_job_offer_link_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="@color/DarkGrey"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="6sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_job_offer_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Application Link" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                android:text='Include the full link\n(e.g. "https://www.google.com/")'
                android:textAlignment="viewStart"
                android:textColor="@color/Green"
                android:textStyle="italic" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_job_offer_description_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="@color/DarkGrey"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="6sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_job_offer_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:hint="Job Description" />
            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/create_job_offer_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Post" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>