<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="580dp"
    android:layout_gravity="center"
    android:background="@drawable/job_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edu_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="New Education"
                android:textAlignment="center"
                android:textColor="@color/Green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edu_school_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="@color/DarkGrey"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="6sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edu_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institution (e.g. UCLA)" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edu_degree_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="@color/DarkGrey"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="6sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edu_degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Degree (e.g. Ph.D. in Bioengineering)" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edu_start_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="@color/DarkGrey"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="6sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edu_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start time (e.g. August 2009)" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/edu_current"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:text="This is an ongoing education" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edu_end_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                app:boxBackgroundColor="@color/DarkGrey"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="6sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edu_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End time (e.g. June 2014)" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/edu_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Save" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>